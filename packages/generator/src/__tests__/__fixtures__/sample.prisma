generator generator_minimum {
  provider    = "sb-prisma"
}

generator generator_with_sb_envs {
  provider    = "sb-prisma"
  endpoint    = "SUPABASE_URL_CUSTOM"
  apikey      = "SUPABASE_ANON_KEY_CUSTOM"
}

generator generator_with_browser_fetch {
  provider    = "sb-prisma"
  fetchModule = "browser"
}

generator generator_with_node_fetch {
  provider    = "sb-prisma"
  fetchModule = "node-fetch"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  teamId Int?

  Team   Team? @relation(fields: [teamId], references: [id])
}

model Team {
  id   Int    @id @default(autoincrement())
  name String
  users User[]

  @@map("teams")
}

enum NotificationType {
  newPosts
  newComments
  newFollowers
  reply
  heartOnPost
  heartOnComment
  heartOnReply
}

enum Language {
  Typescript
  Javascript
  Rust
  Go
  Python
  Cpp
}
