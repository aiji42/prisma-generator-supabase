datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  teamId Int?

  Team   Team? @relation(fields: [teamId], references: [id])
}

model Team {
  id   Int    @id @default(autoincrement())
  name String
  users User[]

  @@map("teams")
}

enum NotificationType {
  newPosts
  newComments
  newFollowers
  reply
  heartOnPost
  heartOnComment
  heartOnReply
}

enum Language {
  Typescript
  Javascript
  Rust
  Go
  Python
  Cpp
}
